<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/container_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        >

    </FrameLayout>

    <View
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="56dp"
        android:layout_gravity="bottom"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bottomBarItem0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/home_press" />

        <ImageView
            android:id="@+id/bottomBarItem1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/shopping_normal" />

        <ImageView
            android:id="@+id/bottomBarItem2"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:layout_weight="1.0"
            android:checked="true"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/smlt_normal" />

        <ImageView
            android:id="@+id/bottomBarItem3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/shoppingcart_normal" />

        <ImageView
            android:id="@+id/bottomBarItem4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/user_normal" />
    </LinearLayout>



</FrameLayout>