<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.xbase.android.sample">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-sdk android:minSdkVersion="15" ></uses-sdk>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.xbase.android.navigation.bottom.BottomNavigationActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.KindsListActivity"
            android:label="@string/title_kinds_list"></activity>
        <activity
            android:name=".activity.KindsDetailActivity"
            android:label="@string/title_kinds_detail"
            android:parentActivityName=".activity.KindsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.xbase.android.sample.activity.KindsListActivity" />
        </activity>
    </application>

</manifest>